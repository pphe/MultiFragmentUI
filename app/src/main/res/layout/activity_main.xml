<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="group3.tcss450.uw.edu.multifragmentui.MainActivity">

    <fragment
        android:id="@+id/search_fragment"
        android:name="group3.tcss450.uw.edu.multifragmentui.SearchBarFragment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:gravity="top"
        tools:layout="@layout/fragment_search_bar" />

    <fragment
        android:id="@+id/content_fragment"
        android:name="group3.tcss450.uw.edu.multifragmentui.ContentFragment"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"

        android:gravity="bottom"
        tools:layout="@layout/fragment_content" />
</LinearLayout>
